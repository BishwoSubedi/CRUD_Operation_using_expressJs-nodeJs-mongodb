<%- include('./partials/header.ejs') %>

<div class="container-fluid">
	<div class="row">
		<!-- Left Side -->
		<div class="col-md-4">
			<h2 >Add Student</h2>
			<form  method="post">
				<div class="form-group">
					<label for="name">Name:</label>
					<input type="text" class="form-control" id="name" name="Name" placeholder="Enter name">
				</div>
				<div class="form-group">
					<label for="age">Age:</label>
					<input type="number" class="form-control" id="age" name="Age" placeholder="Enter age">
				</div>
				<div class="form-group">
					<label for="fees">Fees:</label>
					<input type="number" class="form-control" id="fees" name="Fees" placeholder="Enter fees">
				</div>
				<button type="submit" class="btn btn-secondary btn-sm mt-3 px-3 rounded-4"> Add</button>
			</form>
		</div>
		<!-- Right Side -->
		<div class="col-md-8">
			<h2>Student List</h2>
			<table class="table table-bordered">
				<thead>
					<tr>
                        <th>No.</th>
						<th>Name</th>
						<th>Age</th>
						<th>Fees</th>
                        <th>Action</th>
					</tr>
				</thead>
				<tbody>
					<% var i=1 %>
					<% data.forEach((item)=>{ %>
						<tr>
							<td><%= i++ %></td>
							<td><%= item.name %></td>
							<td><%= item.age %></td>
							<td><%= item.fees %></td>
							<td>
								<form action="/student/edit/<%= item._id %>" method="get" class="d-inline">
                               <button type="submit" class="btn">
								<i class="fa fa-pen "></i>
							   </button>

								</form>
								<form action="/student/delete/<%= item._id %>" method="post" class="d-inline">
									<button type="submit" class="btn">
										<i class="fa fa-trash icon-with-space"></i>
									</button>
	 
									 </form>
								
							</td>
						</tr>
				    <%	}) %>
					
			    </tbody>
			</table>
		</div>
	</div>
</div>
 <%- include('./partials/footer.ejs') %>