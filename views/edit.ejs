<%- include('./partials/header.ejs') %>
<div class="container-fluid">
    <div class="row">
        <!-- Left Side -->
		<div class="col-md-4 mx-auto py-5 ">
            <h2 > Update Student</h2>
			<form method="post" action="/student/update/<%= data._id %>">
				<div class="form-group">
					<label for="name">Name:</label>
					<input type="text" class="form-control" id="name" name="Name" placeholder="Enter name" value="<%= data.name %>">
				</div>
				<div class="form-group">
					<label for="age">Age:</label>
					<input type="number" class="form-control" id="age" name="Age" placeholder="Enter age" value="<%= data.age %>" >
				</div>
				<div class="form-group">
					<label for="fees">Fees:</label>
					<input type="number" name="Fees" class="form-control" id="fees" placeholder="Enter fees" value="<%= data.fees %>">
				</div>
				<button type="submit" class="btn btn-secondary btn-sm mt-3 px-3 rounded-4"> Submit</button>
				<button type="submit" class="btn btn-secondary btn-sm mt-3 px-3 rounded-4"> Back To Home</button>
			</form>
		</div>
        <%- include('./partials/footer.ejs') %>